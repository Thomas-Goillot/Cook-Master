<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_strawberry"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logowhite"/>

        <TextView
        android:id="@+id/titleInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewLogo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Vos Informations"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleInformation"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Nom : "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textName"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Prénom : "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textSurname"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Email : "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textMailVerified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textEmail"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Mail validé : "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textMailVerified"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Téléphone : "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textPhone"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Adresse : "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textAddress"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Ville : "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textZipCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textCity"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Code Postal : "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textZipCode"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Pays : "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textSubscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textCountry"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Abonnement : "
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textVosCours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textSubscription"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Vos cours à venir  "
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />



    </RelativeLayout>

    <TextView
        android:id="@+id/textViewCopyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:text="Developed by Cookmaster Team"
        android:textColor="#FFFFFF"
        android:textSize="11sp" />


</RelativeLayout>
